@model OrderConfirmationVM;
<div class="container-fluid">
    @if (@Model.OrderHeader.PaymentStatus == SD.StatusApproved)
    {
        <div class="row align-items-center g-2">
            <div class="col-12 text-center">
                <h1 class="text-success">Success</h1>
                <h4>Your oder id: @Model.OrderHeader.Id</h4>
                <hr />

            </div>

            <div class="col-5">
                <lottie-player class="w-100" src="https://assets3.lottiefiles.com/packages/lf20_j0qwy5q5.json"
                    background="transparent" speed="0.5" autoplay></lottie-player>
            </div>
            <div class="col-2">
                <p class="text-info fw-bolder">We have sent you an email with the source code to thank you for choosing
                    <strong>
                        Jady
                    </strong>
                </p>
            </div>
            <div class="col-5">
                <lottie-player class="w-100" src="https://assets2.lottiefiles.com/packages/lf20_PEMJ05CEGg.json"
                    background="transparent" speed="1" loop autoplay></lottie-player>
            </div>
        </div>
    }
    else
    {
        <div class="col-12 text-center">
            <h1 class="text-success">Failed</h1>
            <h4>Your oder id: @Model.OrderHeader.Id</h4>
            <hr />
        </div>

        <div class="col-5">
            <lottie-player class="w-100" src="https://assets3.lottiefiles.com/packages/lf20_j0qwy5q5.json"
                background="transparent" speed="0.5" autoplay></lottie-player>
        </div>
        <div class="col-2">
            <p class="text-info fw-bolder">Something went wrong when you changed the payment, if necessary please contact
                support
            </p>
        </div>
        <div class="col-5">
            <lottie-player class="w-100" src="https://assets2.lottiefiles.com/packages/lf20_PEMJ05CEGg.json"
                background="transparent" speed="1" loop autoplay></lottie-player>
        </div>
    }
</div>