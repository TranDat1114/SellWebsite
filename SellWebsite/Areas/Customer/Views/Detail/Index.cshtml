@model Product

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="text-primary">
                @Model.Title
            </h2>
        </div>
        <div class="col-12">
            <div class="d-flex gap-3">
                <div>
                    <i class="fa-regular fa-clock"></i>  @Model.CreatedDate.ToShortDateString()
                </div>
                <div>
                    <i class="fa-regular fa-user"></i> @Model.PostsBy
                </div>
                <div class="text-truncate">
                    <i class="fa-regular fa-folder"></i>
                    @foreach (var item in Model.Categories!)
                    {
                        @item.NameEnglish
                        <em>,</em>
                    }
                </div>
            </div>
        </div>
    </div>
    <hr />
</div>
<div class="container">
    <img class="w-100 shadow-lg mb-5" src="@Model.Image" />
    <div class="row">
        <div class="col-12 col-md-4">
            <h4>Template Details</h4>
            <p><b>Author: </b>@Model.Author</p>
            <p><b>Release: </b>@Model.UpdatedDate.ToShortDateString()</p>
            <p><b>Credits: </b>@Model.Credits</p>
            <p><b>License: </b>@Model.License</p>
        </div>
        <div class="col-12 col-md-8">
            <h4>Description</h4>
            <p>@Html.Raw(Model.Description)</p>
            <hr />
            <div class="text-truncate">
                <i class="fa-regular fa-folder"></i>
                @foreach (var item in Model.Categories!)
                {
                    @item.NameEnglish
                    <em>,</em>
                }
            </div>
        </div>
    </div>
    <div class="row justify-content-evenly">
        <div class="col col-md-4">
        </div>
        <div class="col-12 col-md-4">
            <a class="btn btn-outline-primary w-100 " asp-area="Customer" asp-controller="Home" asp-action="Preview" asp-route-id="@Model.Id"><i class="fa-solid fa-eye"></i> Live Preview</a>
        </div>
        <div class="col col-md-4">
        </div>
    </div>
</div>
