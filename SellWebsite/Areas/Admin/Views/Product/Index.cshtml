@model List< SellWebsite.Models.Models.Product>


<div class="container">
    <div class="row">
        <div class="col-12 col-md-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-12 col-md-6 text-end">
            <a class="btn btn-primary" asp-controller="Product" asp-action="Create">
                <i class="bi bi-plus-circle"></i> Create new category
            </a>
        </div>
    </div>
    <div class="row py-2">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Author)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].PostsBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].License)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].PreviewUrl)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].DownloadUrl)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].CreatedDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].UpdatedDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].DownloadCount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Credits)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Categories)
                    </th>
                    <th>
                        Edit
                    </th>
                    <th>
                        Delete
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderBy(o => o.Id))
                {
                    <tr style="height:100px;" class="align-middle">
                        <td>
                            @item.Id
                        </td>
                        <td>
                            @item.Title
                        </td>
                        <td>
                            @item.Author
                        </td>
                        <td>
                            @item.PostsBy
                        </td>
                        <td style="max-width:20ch;" class="text-truncate">
                            @item.Description
                        </td>

                        <td>
                            @item.License
                        </td>
                        <td>
                            @item.PreviewUrl
                        </td>
                        <td>
                            @item.DownloadUrl
                        </td>
                        <td>
                            @item.CreatedDate
                        </td>
                        <td>
                            @item.UpdatedDate
                        </td>
                        <td>
                            @item.DownloadCount
                        </td>
                        <td>
                            @item.Credits
                        </td>
                        @*      <td>
                    <img style="width:100px; object-fit:contain; object-position:center" class="m-auto" src="@item.Image" alt="CategoryIMG" />
                    </td>*@

                        <td style="width:100ch">
                            @foreach (var category in item.Categories)
                            {
                                <div>
                                    @category.NameEnglish
                                </div>
                            }
                        </td>

                        <td>
                            <a class="btn btn-primary text-nowrap" asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                        </td>
                        <td>
                            <a class="btn btn-danger text-nowrap" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3-fill"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>