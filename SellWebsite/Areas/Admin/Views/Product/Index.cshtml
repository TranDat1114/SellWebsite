@model List< SellWebsite.Models.Models.Product>


<div class="container">
    <div class="row">
        <div class="col-12 col-md-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-12 col-md-6 text-end">
            <a class="btn btn-primary" asp-controller="Product" asp-action="Upsert">
                <i class="bi bi-plus-circle"></i> Create new category
            </a>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row py-2">
            <table id="tblData" class="table border table-striped" style="font-size:0.8rem">
                <thead>
                    <tr>
                        <th class="text-nowrap">
                            @Html.DisplayNameFor(model => model[0].Id)
                        </th>
                        <th class="text-nowrap">
                            @Html.DisplayNameFor(model => model[0].Title)
                        </th>
                        <th class="text-nowrap">
                            @Html.DisplayNameFor(model => model[0].Author)
                        </th>
                        <th class="text-nowrap">
                            @Html.DisplayNameFor(model => model[0].Description)
                        </th>
                        <th class="text-nowrap">
                            @Html.DisplayNameFor(model => model[0].CreatedDate)
                        </th>
                        <th class="text-nowrap">
                            @Html.DisplayNameFor(model => model[0].UpdatedDate)
                        </th>

                        <th class="text-nowrap">
                            @Html.DisplayNameFor(model => model[0].License)
                        </th>
                        <th class="text-nowrap">
                            @Html.DisplayNameFor(model => model[0].Credits)
                        </th>
                        <th class="text-nowrap">
                            @Html.DisplayNameFor(model => model[0].PreviewUrl)
                        </th>
                        <th class="text-nowrap">
                            @Html.DisplayNameFor(model => model[0].DownloadCount)
                        </th>
                        <th class="text-nowrap">
                            @Html.DisplayNameFor(model => model[0].DownloadUrl)
                        </th>
                        <th class="text-nowrap">
                            @Html.DisplayNameFor(model => model[0].PostsBy)
                        </th>
                        <th class="text-nowrap">
                            @Html.DisplayNameFor(model => model[0].Categories)
                        </th>

                        <th class="text-nowrap">
                            @Html.DisplayNameFor(model => model[0].Image)
                        </th>

                        <th class="text-nowrap">
                            Edit
                        </th>
                        <th class="text-nowrap">
                            Delete
                        </th>
                    </tr>
                </thead>
