
<div class="container">
    <div class="row">
        <div class="col-12 col-md-6">
            <h2 class="text-primary">
                Company List
            </h2>
        </div>
        <div class="col-12 col-md-6 text-end">
            <a class="btn btn-primary" asp-controller="Company" asp-action="Upsert">
                <i class="bi bi-plus-circle"></i> Create new company
            </a>
        </div>
    </div>
</div>
<div class="mt-5 container-fluid">
    <div class="row">
        <table id="tblData" class="table table-striped scroll-table w-100" style="font-size:0.8rem;">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th class="text-nowrap">
                        Name
                    </th>
                    <th class="text-nowrap">
                        State
                    </th>
                    <th class="text-nowrap">
                        Address
                    </th>
                    <th class="text-nowrap">
                        Phone Number
                    </th>
                    <th class="text-nowrap">
                        Zip code
                    </th>
                    <th class="text-nowrap">
                        Edit
                    </th>
                    <th class="text-nowrap">
                        Delete
                    </th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>


@section Scripts{
    <script src="~/js/company.js"></script>
    <script src="~/js//DeleteByAPI.js"></script>
}